<h1> Hello </h1>

<h2> Contact us! </h2>

<%= form_for :contact, url: contacts_path, data: {turbo:false} do |f| %>
  <% if @contact %>
    <% @contact.errors.full_messages.each do |msg| %>
      <ul class='error'>
        <li class='error'> <%= msg %> </li>
      </ul>
    <% end %>
  <% end %>

  <p>
    <%= f.label :email %><br/>
    <%= f.text_field :email%>
  </p>

  <p>
    <%= f.label :message %><br/>
    <%= f.text_area :message%>
  </p>

  <p>
    <%= f.submit 'Save message'%>
  </p>
<% end %>